<!DOCTYPE html>
<html>
<%- include("head") %>

<body>
  <%- include("title") %>
  <form action="/attempt" method="post">
    <input type="hidden" name="uid" value="<%= uid %>" />
    <div>
      <label>username</label>
      <input id="username" name="username" type="text" required value="<%= username %>" maxlength=12>
    </div>
    <div>
      <label>password</label>
      <input id="password" name="password" type="text" value="<%= password %>" maxlength=4 autocomplete="off" required
        style="text-transform: uppercase">
      <div class="hint">4 chars long using only ABCDEF</div>
    </div>
    <% if (locals.feedback) { %>
    <div class="feedback">
      ùñ∑ <%= feedback %>
      <p><%= hint %></p>
    </div>
    <% } %>
    <div>
      <input type="submit" class="button" value="login" />
    </div>
  </form>
  <% if (locals.attempts) { %>
  <div class="history">
    <h3>History</h3>
    <% attempts.forEach( function(attempt) { %>
    <p><%= attempt.password %>: <%= attempt.hint %></p>
    <% } ) %>
  </div>
  <% } %>
  </div>
  <script>
    document.getElementById("password").focus()
    var password = document.getElementById("password")
    password.addEventListener("keyup", event => {
      event.stopPropagation()
      password.value = password.value.toUpperCase().replace(/[^ABCDEF]/g, "")
    })
  </script>
</body>

</html>